<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Own_App.MainPage"
             BackgroundImageSource="https://i.pinimg.com/originals/dc/c4/64/dcc46414b839c624056fbc26f9bc84b6.jpg">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label TextColor="DarkGray" FontSize="40" HorizontalOptions="Center" Grid.Row="1" Padding="0,20,0,0">
            <Label.Text>
                Space
            </Label.Text>
        </Label>
        <Label TextColor="DarkGray" FontSize="40" HorizontalOptions="Center" Grid.Row="1" Padding="0,60,0,0">
            <Label.Text>
                Vacuuming
            </Label.Text>
        </Label>

        <Button
            WidthRequest="200"
            Padding="0,250,0,0"
            Grid.Row="2"
            HorizontalOptions="CenterAndExpand"
            VerticalOptions="CenterAndExpand"
            Text="Start"
            TextColor="Yellow"
            FontAttributes="Bold"
            FontSize="40"
            BackgroundColor="Transparent"
            />
    </Grid>
</ContentPage>
